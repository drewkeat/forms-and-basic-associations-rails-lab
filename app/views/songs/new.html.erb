<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name, "Artist" %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre %>
  <%= f.collection_select(:genre_id, Genre.all.sort_by(&:name), :id, :name) %>
  <br>
  <%= f.label :notes %>
  <div id="song_notes">
    <%= f.label :song_notes_1, "Note 1" %>
    <textarea id="song_notes_1" name="song[note_contents][]"></textarea><br>
    <%= f.label :song_notes_2, "Note 2" %>
    <textarea id="song_notes_2" name="song[note_contents][]"></textarea><br>
    <%= f.label :song_notes_3, "Note 3" %>
    <textarea id="song_notes_3" name="song[note_contents][]"></textarea><br>
  </div>
  <%= f.submit %>
<% end %>


